<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="-4dp"
                android:hint="Фамилия"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_primary"/>

            <TextView
                android:id="@+id/tv_error_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="18dp"
                android:textColor="#FF4A4A" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="-4dp"
                android:hint="Имя"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_primary"/>

            <TextView
                android:id="@+id/tv_error_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="18dp"
                android:textColor="#FF4A4A" />

            <EditText
                android:id="@+id/middle_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="-4dp"
                android:hint="Отчество"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_primary"/>

            <TextView
                android:id="@+id/tv_error_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="18dp"
                android:textColor="#FF4A4A" />

            <EditText
                android:id="@+id/account_number"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="-4dp"
                android:hint="Расчетный счет"
                android:inputType="number"
                android:background="@drawable/edittext_primary"/>

            <TextView
                android:id="@+id/tv_error_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:height="18dp"
                android:textColor="#FF4A4A" />

            <EditText
                android:id="@+id/bank_code"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="-4dp"
                android:hint="БИК"
                android:inputType="number"
                android:background="@drawable/edittext_primary"/>

            <TextView
                android:id="@+id/tv_error_bank_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="18dp"
                android:textColor="#FF4A4A" />

            <Button
                android:id="@+id/btn_complite"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Добавить"
                android:background="@drawable/btn_primary"
                android:textColor="#ffffff"
                android:stateListAnimator="@null"/>

        </LinearLayout>
</ScrollView>