<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_16dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/accounts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/accounts_title"
            android:textColor="@color/balance_fuel_gray"
            android:textSize="@dimen/text_20sp"
            app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
            app:layout_constraintStart_toEndOf="@+id/back_arrow"
            app:layout_constraintTop_toTopOf="@+id/back_arrow" />

        <TextView
            android:id="@+id/notification_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:background="@drawable/ic_chip_notification"
            android:paddingStart="9dp"
            android:paddingTop="3dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3" />

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_notification"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/daily_withdrawal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/ic_question"
            android:drawablePadding="10dp"
            android:text="@string/daily_withdrawal"
            android:textColor="@color/gray_intro_text"
            android:textSize="@dimen/text_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accounts_title" />

        <!--  =========  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/no_account_block"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_withdrawal_tv">

            <ImageView
                android:id="@+id/account_background"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:src="@drawable/bg_profile_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:fontFamily="sans-serif"
                android:text="@string/add_account"
                android:textColor="@color/withdraws_yellow"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintBottom_toBottomOf="@+id/account_background"
                app:layout_constraintStart_toStartOf="@id/account_background"
                app:layout_constraintTop_toTopOf="@+id/account_background" />

            <ImageView
                android:id="@+id/add_account_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                app:layout_constraintBottom_toBottomOf="@id/account_background"
                app:layout_constraintEnd_toEndOf="@+id/account_background"
                app:layout_constraintTop_toTopOf="@id/account_background"
                app:srcCompat="@drawable/ic_plus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  =========  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_account_block"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/daily_withdrawal_tv">

            <ImageView
                android:id="@+id/new_account_background"
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:src="@drawable/bg_profile_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_add_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif"
                android:text="@string/add_account"
                android:textColor="@color/withdraws_yellow"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintStart_toStartOf="@id/new_account_background"
                app:layout_constraintTop_toTopOf="@+id/new_account_background" />

            <ImageView
                android:id="@+id/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/new_add_account_tv"
                app:layout_constraintEnd_toEndOf="@+id/new_account_background"
                app:layout_constraintTop_toTopOf="@id/new_add_account_tv"
                app:srcCompat="@drawable/ic_close" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_32dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:hint="@string/first_middle_name"
                android:textColorHint="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintEnd_toEndOf="@+id/new_account_background"
                app:layout_constraintStart_toStartOf="@+id/new_account_background"
                app:layout_constraintTop_toBottomOf="@+id/new_add_account_tv">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_profile"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/gray_intro_text"
                    android:textColorHint="@color/gray_profile"
                    android:textSize="@dimen/text_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surname_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:hint="@string/surname"
                android:textColorHint="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintEnd_toEndOf="@+id/new_account_background"
                app:layout_constraintStart_toStartOf="@+id/new_account_background"
                app:layout_constraintTop_toBottomOf="@+id/name_input_view">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_profile"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/gray_intro_text"
                    android:textColorHint="@color/gray_profile"
                    android:textSize="@dimen/text_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:hint="@string/payment_account"
                android:textColorHint="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintEnd_toEndOf="@+id/new_account_background"
                app:layout_constraintStart_toStartOf="@+id/new_account_background"
                app:layout_constraintTop_toBottomOf="@+id/surname_input_view">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/account_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_profile"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/gray_intro_text"
                    android:textColorHint="@color/gray_profile"
                    android:textSize="@dimen/text_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bik_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:hint="@string/bik"
                android:textColorHint="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintEnd_toEndOf="@+id/new_account_background"
                app:layout_constraintStart_toStartOf="@+id/new_account_background"
                app:layout_constraintTop_toBottomOf="@+id/account_input_view">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bik_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_profile"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/gray_intro_text"
                    android:textColorHint="@color/gray_profile"
                    android:textSize="@dimen/text_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/add_account_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_margin="@dimen/margin_24dp"
                android:background="@drawable/bg_intro_btn"
                android:text="@string/add_button_text"
                android:textAllCaps="false"
                android:textColor="@color/continue_color"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_account_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  =========  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/account_block"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/daily_withdrawal_tv">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:background="@drawable/bg_profile_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="14dp"
                android:text="ПАО “Сбербанк”"
                android:textColor="@color/withdraws_gray"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="@+id/background"
                app:layout_constraintTop_toTopOf="@+id/background" />

            <TextView
                android:id="@+id/order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="6dp"
                android:text="Р/с 408190009938888837"
                android:textColor="@color/withdraws_gray"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="@+id/background"
                app:layout_constraintTop_toBottomOf="@+id/bank_name_tv" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="8dp"
                android:text="Поликин Г. И"
                android:textColor="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintStart_toStartOf="@+id/background"
                app:layout_constraintTop_toBottomOf="@+id/order_tv" />

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="@dimen/margin_16dp"
                app:layout_constraintEnd_toEndOf="@+id/background"
                app:layout_constraintTop_toTopOf="@+id/background"
                app:srcCompat="@drawable/ic_delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  =========  -->

        <TextView
            android:id="@+id/instant_withdrawal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/ic_question"
            android:drawablePadding="10dp"
            android:text="@string/instant_withdrawal"
            android:textColor="@color/gray_intro_text"
            android:textSize="@dimen/text_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_block" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cards_recycler"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instant_withdrawal_tv"
            tools:itemCount="2"
            tools:listitem="@layout/item_accounts_card" />

        <!--  =========  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/no_card_block"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cards_recycler">

            <ImageView
                android:id="@+id/card_background"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/bg_profile_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:fontFamily="sans-serif"
                android:text="@string/add_card"
                android:textColor="@color/withdraws_yellow"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintBottom_toBottomOf="@+id/card_background"
                app:layout_constraintStart_toStartOf="@id/card_background"
                app:layout_constraintTop_toTopOf="@+id/card_background" />

            <ImageView
                android:id="@+id/add_card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                app:layout_constraintBottom_toBottomOf="@id/card_background"
                app:layout_constraintEnd_toEndOf="@+id/card_background"
                app:layout_constraintTop_toTopOf="@id/card_background"
                app:srcCompat="@drawable/ic_plus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  =========  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_card_block"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/cards_recycler"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/new_card_background"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/bg_profile_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_add_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif"
                android:text="@string/add_card"
                android:textColor="@color/withdraws_yellow"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintStart_toStartOf="@id/new_card_background"
                app:layout_constraintTop_toTopOf="@+id/new_card_background" />

            <ImageView
                android:id="@+id/card_close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/new_add_card_tv"
                app:layout_constraintEnd_toEndOf="@+id/new_card_background"
                app:layout_constraintTop_toTopOf="@id/new_add_card_tv"
                app:srcCompat="@drawable/ic_close" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/card_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_24dp"
                android:hint="@string/enter_card_number"
                android:textColorHint="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintEnd_toEndOf="@+id/new_card_background"
                app:layout_constraintStart_toStartOf="@+id/new_card_background"
                app:layout_constraintTop_toBottomOf="@+id/new_add_card_tv">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_profile"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:textColor="@color/agreement_text_color"
                    android:textColorHint="@color/gray_profile"
                    android:textSize="@dimen/text_18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:text="@string/new_card_message"
                android:textColor="@color/gray_profile"
                android:textSize="@dimen/text_13sp"
                app:layout_constraintStart_toStartOf="@+id/card_input_view"
                app:layout_constraintTop_toBottomOf="@+id/card_input_view" />

            <Button
                android:id="@+id/add_card_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_margin="@dimen/margin_24dp"
                android:background="@drawable/bg_intro_btn"
                android:fontFamily="sans-serif-medium"
                android:text="@string/add_button_text"
                android:textAllCaps="false"
                android:textColor="@color/continue_color"
                android:textSize="@dimen/text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_card_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>