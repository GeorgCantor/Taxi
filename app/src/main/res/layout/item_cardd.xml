<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_background"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/bg_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_background_outline"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/bg_account_outline"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bank_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background"
        tools:src="@drawable/ic_sberbank" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/withdraws_white_text"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintStart_toEndOf="@id/bank_icon"
        app:layout_constraintTop_toTopOf="@id/card_background"
        tools:text="4436 7653 73** 8345" />

    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background"
        tools:src="@drawable/ic_mastrcard_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
