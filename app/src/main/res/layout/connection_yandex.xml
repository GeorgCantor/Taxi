<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yandex_block"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@+id/taxi_icon"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:src="@drawable/bg_profile_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/driver_license_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/driver_license"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/driver_license_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/driver_license_input_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/driver_license"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/driver_license_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download_green"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/photo1"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/driver_license_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/margin_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/driver_license_input_view2"
        app:layout_constraintStart_toStartOf="@+id/driver_license_input_view2"
        app:layout_constraintTop_toTopOf="@+id/driver_license_input_view2"
        app:srcCompat="@drawable/ic_load_cancel" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passport_first_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/passport_first_page"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/driver_license_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passport_first_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passport_first_input_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/passport_first_page"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/driver_license_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passport_first_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download_green"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/photo2"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/passport_first_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/margin_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/passport_first_input_view2"
        app:layout_constraintStart_toStartOf="@+id/passport_first_input_view2"
        app:layout_constraintTop_toTopOf="@+id/passport_first_input_view2"
        app:srcCompat="@drawable/ic_load_cancel" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passport_reg_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/passport_registration_page"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/passport_first_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passport_reg_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passport_reg_input_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/passport_first_page"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/passport_first_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passport_reg_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download_green"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/photo3"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/passport_reg_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/margin_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/passport_reg_input_view2"
        app:layout_constraintStart_toStartOf="@+id/passport_reg_input_view2"
        app:layout_constraintTop_toTopOf="@+id/passport_reg_input_view2"
        app:srcCompat="@drawable/ic_load_cancel" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sts_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/sts"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/passport_reg_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sts_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sts_input_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/sts"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/passport_reg_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sts_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download_green"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/photo4"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/sts_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/margin_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/sts_input_view2"
        app:layout_constraintStart_toStartOf="@+id/sts_input_view2"
        app:layout_constraintTop_toTopOf="@+id/sts_input_view2"
        app:srcCompat="@drawable/ic_load_cancel" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/license_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/license"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/sts_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/license_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/license_input_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/license"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/sts_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/license_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:drawableEnd="@drawable/ic_download_green"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/photo5"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/license_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/margin_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/license_input_view2"
        app:layout_constraintStart_toStartOf="@+id/license_input_view2"
        app:layout_constraintTop_toTopOf="@+id/license_input_view2"
        app:srcCompat="@drawable/ic_load_cancel" />

    <!--  +++++++++  -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_number_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:hint="@string/add_phone_number"
        android:textColorHint="@color/gray_profile"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/license_input_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_profile"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_16dp"
            android:textColor="@color/gray_intro_text"
            android:textColorHint="@color/gray_profile"
            android:textSize="@dimen/text_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

