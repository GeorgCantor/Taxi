<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginTop="12dp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/input_phone_number"
        android:textColor="@color/gray_intro_text"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintBottom_toTopOf="@+id/phone_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_primary"
        android:cursorVisible="true"
        android:digits="+() 1234567890-"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:maxLength="18"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin_16dp"
        android:text="@string/phone_start_symbols"
        android:textColor="@color/gray_intro_text"
        android:textColorHint="@color/grayText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/text_30sp"
        android:textStyle="bold"
        android:theme="@style/CustomTheme"
        app:backgroundTint="@color/grayText"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_title" />

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/error_red_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_edit_text"
        tools:text="@string/wrong_format_error" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_intro_btn"
        android:fontFamily="sans-serif-medium"
        android:radius="0dp"
        android:text="@string/continue_hint"
        android:textAllCaps="false"
        android:textColor="@color/continue_color"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintBottom_toTopOf="@+id/login_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_tv" />

    <CheckBox
        android:id="@+id/login_checkbox"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:button="@drawable/checkbox_selector"
        android:checked="true"
        android:fontFamily="sans-serif"
        android:paddingStart="8dp"
        android:paddingTop="22dp"
        android:text="@string/login_agreement_title"
        android:textColor="@color/agreement_text_color"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <requestFocus />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_1"
                style="@style/KeyboardButtonStyle"
                android:text="1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_2"
                style="@style/KeyboardButtonStyle"
                android:text="2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_3"
                style="@style/KeyboardButtonStyle"
                android:text="3"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_4"
                style="@style/KeyboardButtonStyle"
                android:text="4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_5"
                style="@style/KeyboardButtonStyle"
                android:text="5"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_6"
                style="@style/KeyboardButtonStyle"
                android:text="6"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_7"
                style="@style/KeyboardButtonStyle"
                android:text="7"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_8"
                style="@style/KeyboardButtonStyle"
                android:text="8"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/num_9"
                style="@style/KeyboardButtonStyle"
                android:text="9"
                tools:ignore="HardcodedText" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/erase_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_keyboard_button"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_erase" />

            <Button
                android:id="@+id/num_0"
                style="@style/KeyboardButtonStyle"
                android:text="0"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/apply_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_keyboard_button"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_enter" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
